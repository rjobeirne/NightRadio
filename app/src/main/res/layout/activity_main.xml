<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mel_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_melbourne"
        app:layout_constraintBottom_toTopOf="@id/rn_logo"
        app:layout_constraintEnd_toStartOf="@id/play_mel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rn_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radio_national"
        app:layout_constraintTop_toBottomOf="@id/mel_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/play_rn" />


    <ToggleButton
        android:id="@+id/play_mel"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:background="@drawable/outline_pause_circle_24"
        android:textAllCaps="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintTop_toTopOf="@id/mel_logo"
        app:layout_constraintBottom_toBottomOf="@id/mel_logo"
        app:layout_constraintStart_toEndOf="@id/mel_logo"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/play_rn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerInParent="true"
        android:background="@drawable/outline_pause_circle_24"
        android:textAllCaps="false"
        android:textOff=""
        android:textOn=""
        app:layout_constraintTop_toTopOf="@id/rn_logo"
        app:layout_constraintStart_toEndOf="@id/rn_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rn_logo"/>


</androidx.constraintlayout.widget.ConstraintLayout>